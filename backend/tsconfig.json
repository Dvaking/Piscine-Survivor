{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/API/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "paths": {
      "@types": ["./types/index.ts"]
  }
}
