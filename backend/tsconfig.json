{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@types": ["src/types/index.ts"],
      "@api": ["src/api/index.ts"],
      "@queries": ["src/queries/index.ts"],
      "@components": ["src/components/index.ts", "dist/components/index.js"],
    },
  },
  "include": ["src/**/*"],
  "exclude": [" _modules", "**/*.test.ts"]
}
